<li class="page">
  <%= file.file_name %>
  <ul class="file_list">
  <% file.children.each do |child| %>
    <% if child.is_directory? %>
        <%= render 'files/list', :file => child, :project => project %>
    <% else %>
        <li class="<%= "page #{child.extension_css}  #{"large_file" if child.size > 1024 * 1024 * 1024}" %>">
          <%=  link_to child.file_name + " (#{child.str_size})", project_s3_file_path(project, CGI::escape(child.path.gsub(" ","%20").gsub("/","%2F"))), :target => '_blank' %>
        </li>
    <% end %>
  <% end %>
  </ul>
</li>