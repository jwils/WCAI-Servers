<h1>Listing servers</h1>

<table>
  <tr>
    <th>Status</th>
    <th>Company</th>
    <th></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= server.status %></td>
    <td><%= server.project.company.name %></td>
    <td><%= link_to 'Show', server %></td>
  </tr>
<% end %>
</table>

