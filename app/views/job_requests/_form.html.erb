<%= form_for @job_request, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :project_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :project_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :assignee_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :assignee_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :requester_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :requester_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :priority, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :priority, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                job_requests_path, :class => 'btn' %>
  </div>
<% end %>
