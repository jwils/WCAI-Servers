<%- model_class = Timesheet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Week of:</th>
      <th>Timesheet for:</th>
      <th>Status:</th>
      <th>Hours recorded:</th>
        <th>Actions:</th>
    </tr>
  </thead>
  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= link_to timesheet.start_date, timesheet_path(timesheet) %></td>
        <td><%= timesheet.user.name %></td>
        <td><%= timesheet.status_string %></td>
        <td><%= timesheet.hours %></td>

        <td>
          <%if current_user == timesheet.user%>
          <% unless timesheet.submitted %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_timesheet_path(timesheet), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      timesheet_path(timesheet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
          <%elsif current_user.is? :admin and timesheet.approver.nil? %>
              <%= link_to 'Approve',
                          approve_timesheet_path(timesheet), :class => 'btn btn-mini' %>
          <%end%>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_timesheet_path,
            :class => 'btn btn-primary' %>
