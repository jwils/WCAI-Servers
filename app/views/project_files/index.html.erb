<h1>Listing project_files</h1>

<table>
  <tr>
    <th>File</th>
    <th></th>
  </tr>

<% @project_files.each do |project_file| %>
  <tr>
  	<% expiration = Time.now + 60.seconds %>
    <td><%= link_to project_file.key,  project_file.url(expiration) #project_project_files_path(@project, project_file.id) %></td>
    <td><%= link_to 'Destroy', project_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project file', new_project_project_file_path(@project) %>
