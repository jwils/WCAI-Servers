<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <% if current_user.is? :admin %>
        <th>Toggle Lock</th>
      <% end %>
    </tr>
  </thead>
 <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <% if current_user.is? :admin %>
          <% if user.access_locked? %>
            <td><%= link_to  "Unlock User", toggle_lock_user_path(user), :class => 'btn btn-mini', :remote => true %></td>
          <% else %>
            <td><%= link_to  "Lock User", toggle_lock_user_path(user), :class => 'btn btn-mini btn-danger', :remote => true %></td>
          <% end %>
      <% end %>
    </tr>
   <% end %>
</tbody>
</table>
